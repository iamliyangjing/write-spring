<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean id="userService" class="cn.write.springframework.test.aop.beans.UserService"/>
    <bean class="cn.write.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
    <bean id="beforeAdvice" class="cn.write.springframework.test.aop.interceptor.UserServiceBeforeAdvice"/>
    <bean id="methodInterceptor" class="cn.write.springframework.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>
    <bean id="pointcutAdvisor" class="cn.write.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* cn.write.springframework.test.aop.beans.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>
</beans>